<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
    x:Class="DXApplication1.MainWindow" 
    Title="MainWindow" Height="500" Width="800">
    <StackPanel Orientation="Vertical">
        <Button x:Name="btnBasicDataGrid" Click="btnBasicDataGrid_Click"
            Background="AliceBlue" Height="50" Margin="15">
            <TextBlock Text="Basic Data Grid" FontSize="25"/>
        </Button>
        <Button x:Name="btnHamburgerMenu" Click="btnHamburgerMenu_Click"
                Background="OrangeRed" Height="50" Margin="15">
            <TextBlock Text="Hamburger Menu" FontSize="25"/>
        </Button>
    </StackPanel>
</dx:ThemedWindow>
